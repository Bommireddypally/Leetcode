#146. LRU Cache
class LRUCache:

    def __init__(self, capacity: int):
        self.capacity = capacity
        self.hash_map = {}

    def get(self, key: int) -> int:
		
        if key in self.hash_map.keys():
			# we pop first and then add back the item to "update" the queue
            value = self.hash_map.pop(key)
            self.hash_map[key] = value
            return value
						
        else:
            return -1
        
    def put(self, key: int, value: int) -> None:

        if key in self.hash_map.keys():
			# same trick as above (apparently .put counts as usage for leetcode)
            self.hash_map.pop(key)
        self.hash_map[key] = value
        
        if len(self.hash_map) > self.capacity:
            oldest = next(iter(self.hash_map))   # follows FIFO --> first inserted / least-recently-used
            del self.hash_map[oldest]


# Your LRUCache object will be instantiated and called as such:
# obj = LRUCache(capacity)
# param_1 = obj.get(key)
# obj.put(key,value)
